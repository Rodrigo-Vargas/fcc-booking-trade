doctype html
html
  head
    title Rvg Voting App
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css")
    link(rel="stylesheet" href="/public/css/main.css")
    script(type="text/javascript" src="https://code.jquery.com/jquery-1.12.1.min.js")
    script(type="text/javascript" src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js")
  body
    #header
      .container
        .row
          .col-xs-3
            #logo
              a(href="/") Book Trading Club
          #nav.col-xs-6
            ul
              li
                a.active(href="/books") BOOKS
              li
                a(href="/my-books") MY BOOKS
          #info-user.col-xs-3
            if (user)
              a(href="/settings") #{ user.local.email }
            else
              ul
                li
                  a(href="/signup") Signup
                li
                  a(href="/login") Login

    #content.container
      if message && message.length > 0
        div(role="alert").alert.alert-info
          span #{message}

      block content
    